@model IEnumerable<Orders>
@{
    ViewData["Title"] = "Orders";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Orders List</h2>
        </div>
    </div>
</div>

<br />
<br />

@if (Model.Count() > 0)
{
    <div class="container">
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Customer Name
                    </th>
                    <th>
                        Customer Email
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td style="width:30%">@item.Name</td>
                    <td style="width:50%">@item.Email</td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Admin" asp-route-Id="@item.Id" asp-action="ViewOrder" class="btn btn-primary">
                                View
                            </a>
                            <a asp-controller="Admin" asp-route-Id="@item.Id" asp-action="DeleteOrder" class="btn btn-danger">
                                Delete
                            </a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>

}
else
{
    <p class="ml-4">No Order Exists...</p>
}