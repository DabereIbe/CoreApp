@model IEnumerable<Product>
@{
    ViewData["Title"] = "Products";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Products</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Admin" asp-action="CreateProduct" class="btn btn-primary">
                Create New Product
            </a>
        </div>
    </div>
</div>

<br />
<br />

@if (Model.Count() > 0)
{
    <div class="container">
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Sr. No</th>
                    <th>Product Name</th>
                    <th>Price</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>Sr. No</th>
                    <th>Product Name</th>
                    <th>Price</th>
                    <th>Action</th>
                </tr>
            </tfoot>
            <tbody>
                @foreach (var item in Model)
                {
                    int sr = 1;
                    <tr>
                        <td style="width:30%">@sr</td>
                        <td style="width:30%">@item.Name</td>
                        <td style="width:30%">@item.Price</td>
                        <td class="text-center">
                            <div class="btn-group" role="group">
                                <a asp-controller="Admin" asp-route-Id="@item.Id" asp-action="EditProduct" class="btn btn-primary">
                                    Edit
                                </a>
                                <a asp-controller="Admin" asp-route-Id="@item.Id" asp-action="DeleteProduct" class="btn btn-danger">
                                    Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                    sr++;
                }
            </tbody>
        </table>
    </div>

}
else
{
    <p class="ml-4">No Product Added...</p>
}
